<a href="javascript:history.back()">&larr;Back</a>
<div class="admin-title">
  <h2>View / edit Post</h2>
  <input
    type="submit"
    value="Delete"
    class="btn-delete btn"
    onclick="document.getElementById('deletebotton').style.display='block'"
    style="margin-left: 600px"
  />
  <form action="/admin/deletePost/<%= data._id %>?_method=DELETE" method="POST">
    <div
      id="deletebotton"
      class="modal"
      style="
        text-align: center;
        position: fixed;
        z-index: 3;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
      "
    >
      <div
        style="
          box-shadow: 5px 5px 50px rgba(2, 2, 2, 0.459);
          border-radius: 10px;
          width: 600px;
          padding: 10px;
          margin: auto;
          margin-top: 200px;
          background-color: rgb(255, 255, 255);
        "
      >
        <span
          onclick="document.getElementById('deletebotton').style.display='none'"
          class="close"
          title="Close Modal"
          style="
            margin-left: 550px;
            font-size: 30px;
            cursor: pointer;
            padding-right: 20px;
          "
          >&times;</span
        >

        <div class="container">
          <h1>Delete Post</h1>
          <p>Are you sure you want to Delete your post?</p>

          <div class="clearfix">
            <button
              type="button"
              class="cancelbtn btn"
              onclick="document.getElementById('deletebotton').style.display='none'"
            >
              Cancel
            </button>
            <button type="submit" class="deletebtn btn">Delete</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<form action="/admin/editPost/<%= data._id %>?_method=POST" method="POST">
  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Post Title"
    name="title"
    value="<%= data.title %>"
    required
  />
  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10" required><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn" />
</form>
