<div class="postPlace" style="height: 600px;overflow-y: auto; ">

<h3>users: <%= users %></h3>
<h3>posts: <%= posts %></h3>
<div class="admin-title">
  <h2>Posts</h2>
  <!-- <a href="/add-post" class="button">+ Add New</a> -->
</div>

<ul class=" article-ul ">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
                <br>
                <p>Posted by: <%= post.author.username %></p>
                <br>
                <% if (post.status === 'false') { %>
                  <p>Deleted Post</p>
                <% } %>
                
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
            <div class="admin-post-control">
                <a href="/edit-post/<%= post._id %>" class="btns">Edit</a>
                
                <input type="button" value="Delete" class="btns btn-delete" onclick="document.getElementById('deletebotton<%= post._id %>').style.display='block'" >
            </div>
        </li>

        <!-- Modal for deleting a specific post -->
        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
            <div id="deletebotton<%= post._id %>" class="modal" style="text-align: center; position: fixed; z-index: 3; display: none; width: 100%; height: 100%; top: 0; left: 0;">
                <div style="box-shadow: 5px 5px 50px rgba(2, 2, 2, 0.459); border-radius: 10px; width: 600px; padding: 10px; margin: auto; margin-top: 200px; background-color: rgb(255, 255, 255);">
                    <span onclick="document.getElementById('deletebotton<%= post._id %>').style.display='none'" class="close" title="Close Modal" style="margin-left: 550px; font-size: 30px; cursor: pointer; padding-right: 20px;">&times;</span>
                    
                    <div class="container">
                        <h1>Delete Post</h1>
                        <p>Are you sure you want to delete your post?</p>
                        <div class="clearfix">
                            <button type="button" class="cancelbtn btn" onclick="document.getElementById('deletebotton<%= post._id %>').style.display='none'">Cancel</button>
                            <button type="submit" class="deletebtn btn">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    <% }) %>
</ul>
</div>